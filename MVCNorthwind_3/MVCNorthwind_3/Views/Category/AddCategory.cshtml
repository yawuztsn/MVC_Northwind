@model Category
@{
    ViewBag.Title = "AddCategory";
}

@using (Html.BeginForm())
     {
         <div class="panel panel-primary">
             <div class="panel panel-body">
                 <div>
                     @Html.TextBoxFor(x=>x.CategoryName, new {placeholder ="Kategori ismi giriniz",@class="form-control" })
                 </div>
                 <br/>
                 <div>
                     @Html.TextBoxFor(x => x.Description, new { placeholder = "Açıklama giriniz", @class = "form-control" })
                 </div>
                 <br/>
                 <div>
                     <button class="btn btn-primary">Ekle</button>
                 </div>
             </div>
         </div>
     } 

